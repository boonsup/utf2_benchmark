# %% [code]
def plot_energy_trace():
    E0 = utf.F.last_trace0
    E1 = utf.F.last_trace1
    steps = np.arange(len(E0))
    plt.figure(figsize=(8,4))
    plt.plot(steps, E0, label="E‚ÇÄ(t)", color="cyan")
    plt.plot(steps, E1, label="E‚ÇÅ(t)", color="magenta", alpha=0.7)
    plt.axhline(np.mean(E0[200:]), color="gray", linestyle="--", alpha=0.6)
    plt.title("FÃÇ Chaos Energy Drift Trace")
    plt.xlabel("Iteration step")
    plt.ylabel("Energy (x¬≤)")
    plt.legend()
    out_path = "figures/f_chaos_kernel.png"
    plt.savefig(out_path, dpi=200, bbox_inches="tight")
    print(f"üìä Energy trace saved ‚Üí {out_path}")
    return out_path

plot_energy_trace()

